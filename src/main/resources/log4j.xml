<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

  <!-- ====================================================================== -->
  <!-- A P P E N D E R S                                                      -->
  <!-- ====================================================================== -->

  <!-- console -->
  <appender name="console" class="org.apache.log4j.ConsoleAppender">
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{dd.MM.yyyy HH:mm:ss} %-5p [%c] %m%n"/>
    </layout>
  </appender>

  <!-- log4j.log -->
  <appender name="root" class="org.apache.log4j.FileAppender">
    <param name="File" value="jcr-runner.log"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{dd.MM.yyyy HH:mm:ss} %-5p [%c] %m%n"/>
    </layout>
  </appender>

  <!-- ====================================================================== -->
  <!-- L O G G E R S                                                          -->
  <!-- ====================================================================== -->

  <category additivity="false" name="org.apache.jackrabbit.core">
    <level value="warn"/>
    <appender-ref ref="root"/>
  </category>
  <category additivity="false" name="org.hippoecm.repository">
    <level value="warn"/>
    <appender-ref ref="root"/>
  </category>

  <category additivity="false" name="org.onehippo.forge.jcrrunner">
    <level value="info"/>
    <appender-ref ref="root"/>
    <appender-ref ref="console"/>
  </category>


  <category additivity="false" name="plugin.*">
    <level value="info"/>
    <appender-ref ref="root"/>
    <appender-ref ref="console"/>
  </category>


  <root>
    <level value="info"/>
    <appender-ref ref="root"/>
  </root>

</log4j:configuration>
